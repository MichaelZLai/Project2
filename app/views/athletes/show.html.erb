<div class="headbar">
<h2>Welcome Back</h2>
<p>I've missed you.</p>
</div>
<h3>Athlete Profile</h3>
<div class="athlete_prof">
  <img src="<%= @athlete.img_url %>">
  <div class="athlete_attr">
    <p>Name: <%= @athlete.user.name %></p>
    <p>Gender: <%= @athlete.gender %></p>
    <p>Age: <%= @athlete.age %></p>
    <p>Height: <%= @athlete.height %></p>
    <p>Weight: <%= @athlete.weight %></p>
  </div>
  <div class="athlete_maxes">
    <ul>
      <li></li>
      <li></li>
    </ul>
  </div>
</div>



<%= link_to "Back", workouts_path %>
<% if can? :update, @athlete %>
  | <%= link_to "Edit Athlete", edit_athlete_path(@athlete) %>
  | <%= link_to "Delete Athlete", athlete_path(@athlete), method: :delete, class: "delete" %>
<% end %>
