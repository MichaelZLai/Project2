<div class="headbar">
<h2>Create New Workout</h2>
<p>Be Gentle.</p>
</div>

<div id="nav_links">
  <%= link_to "Back", workouts_path %>
</div>

<h3>Add Workout</h3>

<div id="form">
<%= form_for @workout do |f| %>

<p><%= f.label :workout_date %></p>
<p><%= f.date_field :workout_date, :value => Time.now.strftime('%Y-%m-%d') %></p>

<p><%= f.label :workout_name %></p>
<p><%= f.text_field :name %></p>

<p><%= f.label :Workout_description %></p>
<p><%= f.text_area :wod %></p>

<p><%= f.submit "Create WOD!" %></p>

<% end %>
</div>
