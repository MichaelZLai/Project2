<div class="headbar">
<h2>Create New Workout</h2>
<p>Be Gentle.</p>
</div>

<h3>Add Workout</h3>
<%= form_for @workout do |f| %>

<p><%= f.label :workout_date %>
<%= f.date_field :workout_date, :value => Time.now.strftime('%Y-%m-%d') %></p>

<p><%= f.label :workout_name %>
<%= f.text_field :name %></p>

<p><%= f.label :workout %>
<%= f.text_area :wod %></p>

<%= f.submit "Create WOD!" %>

<% end %>

<%= link_to "Back", workouts_path %>
